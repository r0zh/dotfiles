{
  "layer": "top",
  "position": "top",
  "margin": "3, 0, 2, 0",
  "height": 10,
  "modules-left": [
    "custom/launcher",
    "cpu",
    "memory",
    "disk",
    "mpd"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "network",
    "idle_inhibitor",
    "pulseaudio",
    "battery",
    "backlight#icon",
    "backlight#value",
    "clock",
    "tray",
    "custom/weather",
    "custom/power"
  ],
  "idle_inhibitor": {
    "format": "{icon} ",
    "format-icons": {
      "activated": "ï®",
      "deactivated": "ï°"
    }
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ïƒ§ {capacity}%",
    "format-plugged": "ï‡¦ {capacity}%",
    "format-icons": [
      "ï‰„",
      "ï‰ƒ",
      "ï‰‚",
      "ï‰",
      "ï‰€"
    ]
  },
  "clock": {
    "interval": 1,
    "locale": "C",
    "format": "{:%I:%M %p}",
    "format-alt": "ï³ {:%a, %b %d}"
  },
  "cpu": {
    "interval": 10,
    "format": "ï‹› {usage}%",
    "max-length": 10,
    "on-click": "kitty -e 'htop'"
  },
  "custom/keyboard-layout": {
    "exec": "swaymsg -t get_inputs | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
    "interval": 30,
    "format": "ï„œ  {}",
    "signal": 1,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/keyhint.sh"
  },
  "memory": {
    "interval": 5,
    "format": "ï€¹ {}%",
    "on-click": "kitty -e 'htop'",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "disk": {
    "format": "ï‚  {free}"
  },
  "network": {
    "interval": 5,
    "format-wifi": "ï‡« ({signalStrength}%)",
    "format-ethernet": "ïƒ¬ {ifname}: {ipaddr}/{cidr}",
    "format-disconnected": "âš  Disconnected",
    "tooltip-format": "{ifname}: {ipaddr}",
    "on-click": "kitty -e 'nmtui'"
  },
  "network#vpn": {
    "interface": "tun0",
    "format": "ï€’ {essid} ({signalStrength}%)",
    "format-disconnected": "âš  Disconnected",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
  },
  "sway/mode": {
    "format": "{}",
    "tooltip": false
  },
  "sway/window": {
    "format": "{}",
    "max-length": 120
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "disable-markup": false,
    "all-outputs": true,
    "format": " {icon} "
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} ïŠ” {volume}%",
    "format-bluetooth-muted": "ïª€ ïŠ” muted",
    "format-muted": "ïª€ muted",
    "format-icons": {
      "headphone": "ï€¥",
      "hands-free": "ï–",
      "headset": "ï€¥",
      "phone": "ï‚•",
      "portable": "ï‚•",
      "car": "ï†¹",
      "default": [
        "\uf026",
        "ï€§",
        "ï€¨"
      ]
    },
    "on-click-right": "kitty alsamixer",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },
  "custom/weather": {
    "exec": "~/.config/waybar/scripts/weather.sh",
    "format": "{text} {icon}",
    "return-type": "json",
    "interval": 600,
    "tooltip-format": "{tooltip}"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 5
  },
  "backlight#icon": {
    "format": "{icon}",
    "format-icons": [
      "ïƒ«"
    ],
    "on-scroll-down": "brightnessctl -c backlight set 1%-",
    "on-scroll-up": "brightnessctl -c backlight set +1%"
  },
  "backlight#value": {
    "format": "{percent}%",
    "on-scroll-down": "brightnessctl -c backlight set 1%-",
    "on-scroll-up": "brightnessctl -c backlight set +1%"
  },
  "custom/firefox": {
    "format": "î… ",
    "on-click": "exec firefox",
    "tooltip": false
  },
  "custom/terminal": {
    "format": "ï„  ",
    "on-click": "exec kitty",
    "tooltip": false
  },
  "custom/files": {
    "format": "ïŠ ",
    "on-click": "exec thunar",
    "tooltip": false
  },
  "custom/launcher": {
    "format": "ï„µ",
    "on-click": "exec ulauncher",
    "tooltip": false
  },
  "custom/power": {
    "format": "â»",
    "on-click": "exec ~/.config/waybar/scripts/power-menu.sh",
    "tooltip": false
  },
  "mpd": {
    "format": "{stateIcon} {artist} - {title}",
    "format-disconnected": "ğŸ¶",
    "format-stopped": "â™ª",
    "interval": 10,
    "consume-icons": {
      "on": "ïƒ„ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ï´</span> ",
      "on": "ï´ "
    },
    "repeat-icons": {
      "on": "ï€ "
    },
    "single-icons": {
      "on": "ï€1 "
    },
    "state-icons": {
      "paused": "ïŒ",
      "playing": "ï‹"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
    "max-length": 60
  }
}
